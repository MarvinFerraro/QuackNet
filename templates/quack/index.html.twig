{% extends 'base.html.twig' %}

{% block title %}Quack index{% endblock %}

{% block body %}
    <h1 class="mb-5">Liste des Quacks</h1>

    {% if errorMessage is defined %}
        <div>
            <p class="alert alert-danger" id="alert" role="alert">{{ errorMessage }} <button id="close">Close</button></p>
        </div>
    {% endif %}

    {% for quack in quacks %}
        <div class="card w-75 BoxQuacks">
            <div class="card-body">
                <div class="mb-2">
                    <h5 class="card-title"><small>Poster par :</small> {{ quack.user.duckname }}</h5>
                    <p class="card-text card-body QuackContent">{{ quack.content }}</p>
                    <small>{{ quack.createdAt ? quack.createdAt|date('Y-m-d H:i:s') : '' }}</small>
                </div>
                <div>
                    <a href="{{ path('quack_show', {'id': quack.id}) }}" class="btn-info btn">Voir plus</a>
                    <a href="{{ path('quack_edit', {'id': quack.id}) }}" class="btn btn-danger">Modifier</a>
                </div>
            </div>
        </div>
    {% else %}
        <p>Aucune publication trouver</p>
    {% endfor %}
{% endblock %}
